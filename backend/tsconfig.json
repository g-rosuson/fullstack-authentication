{
  "compilerOptions": {
    "resolveJsonModule": true,
    "target": "es5",
    "strict": true,
    "esModuleInterop": true,
    "composite": true,
    "baseUrl": "./",
    "paths": {
      "*": ["src/*"]
    },
    // Tells TypeScript where to look for global type declarations
    "typeRoots": ["src/types"]
  },
  "include": ["src/**/*.ts", "src/**/*.json", ".eslintrc.js"],
}