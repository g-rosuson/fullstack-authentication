{
    "compilerOptions": {
        "types": ["vitest/globals"],
        "moduleResolution": "bundler",
        "strictPropertyInitialization": false,
        "target": "es2022",
        "strict": true,
        "esModuleInterop": true,
        "composite": true,
        "baseUrl": "./",
        "paths": {
            "*": ["src/*"]
        },
    },
    "include": ["src/**/*.ts", "src/**/*.json", "src/global.d.ts", ".eslintrc.json", "vitest.config.mjs"],
}